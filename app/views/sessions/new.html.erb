<h1 class="text-center mt-4">Login</h1>

<div class="container">

  <%= form_with(scope: :session, class: "shadow p-3 mb-3 bg-info rounded", local: true, url: login_path) do |f| %>
    <div class="form-group row">
      <%= f.label :email, class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_field :email, class: "form-control shadow rounded", placeholder: "Email" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_field :password, class: "form-control shadow rounded", placeholder: "Password", autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <div class="row justify-content-center mb-3">
    <%= link_to '[ Cancel and return to home ]', root_path, class: "text-info" %>
  </div>

</div>
