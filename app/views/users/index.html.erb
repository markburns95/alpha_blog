<h1 class="text-center mt-4">Alpha Bloggers</h1>

<div class="container">

  <%= @users.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow bg-white rounded profile-card" style="width: 18rem;">
        <%= link_to gravatar_for(user), user_path(user), class: 'card-img-top mt-4' %>
        <div class="card-body">
          <h5 class="card-title"><%= user.username %></h5>
          <p class="card-text"><%= pluralize(user.articles.count, "article") if user.articles %></p>
          <%= link_to 'View Profile', user_path(user), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>
