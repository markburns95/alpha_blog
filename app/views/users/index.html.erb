<h1 class="text-center mt-4">Alpha Bloggers</h1>

<div class="container">

  <div class="row mt-4 justify-content-center">
    <%= will_paginate(@articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
  </div>
  <%= @users.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow bg-white rounded profile-card" style="width: 18rem;">
        <%= link_to gravatar_for(user), user_path(user), class: 'card-img-top mt-4' %>
        <div class="card-body">
          <h5 class="card-title"><%= user.username %></h5>
          <p class="card-text"><%= pluralize(user.articles.count, "article") if user.articles %></p>
          <%= link_to 'View Profile', user_path(user), class: "btn btn-primary" %>
          <% if logged_in? and current_user.admin? %>
            <%= link_to 'Delete User', user_path(user), method: :delete,
                                                        class: "btn btn-danger",
                                                        data: { confirm: "Are you sure you want to delete the user and all of their articles?" } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row mt-4 justify-content-center">
    <%= will_paginate(@articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
  </div>

</div>
